        <div class="clearfix col-sm-11 col-md-12 col-lg-12">
            <div class="col-sm-12 col-md-12 col-lg-12" id="IDSoldadorCertificacion" style="display:none">
                <input id="SoldadorCertificacionID" />
            </div>
            <div class="alert-container">
                <div class="message">
                    Mensaje de éxito/error/advertencia
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-sm-3 col-md-3 col-lg-4" id="DivCodigoObrero">
