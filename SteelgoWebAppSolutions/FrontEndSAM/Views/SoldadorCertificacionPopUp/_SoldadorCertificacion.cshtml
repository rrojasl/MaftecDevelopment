        <div class="form-group col-sm-3 col-md-3 col-lg-4" id="DivFechaInicio">
            <label id="SoldadorCertificacionFechaInicioCertificado"></label>
            <input id="SoldadorCertificacionFechaInicio" />
        </div>
        <div class="form-group col-sm-3 col-md-3 col-lg-4" id="DivFechaFin">
            <label id="SoldadorCertificacionFechaFinCertificado"></label>
            <input id="SoldadorCertificacionFechaFin" />
        </div>
        <div class="form-group col-sm-3 col-md-3 col-lg-4" id="DivEspesorMaximo">
