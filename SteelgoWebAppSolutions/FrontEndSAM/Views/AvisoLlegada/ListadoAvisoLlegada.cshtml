    function Filtros(prueba) {
        var ListadoModal;
        ListadoModal = { FolioLlegadaID: "", FolioAvisoLlegadaID: "", Patio: "", Proyectos: "", Proveedor: "", FechaInicial: "", FechaFinal: "", token: "" };
