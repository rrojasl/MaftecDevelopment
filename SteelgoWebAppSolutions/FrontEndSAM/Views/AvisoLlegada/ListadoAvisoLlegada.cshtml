        ListadoModal.Patio = Patio;
        ListadoModal.Proyectos = ProyectoIDs;
        ListadoModal.Proveedor = Proveedor;
        ListadoModal.FechaInicial = obtenerFormatoFecha(d);
        ListadoModal.FechaFinal = obtenerFormatoFecha(d1);
        ListadoModal.token = Cookies.get("token");
        console.log(JSON.stringify(ListadoModal));

        $FiltrosListadoEntradaMaterial.AvisoLlegada.read({}, { data: JSON.stringify(ListadoModal) }).done(function (data) {
            if (data.ReturnCode) {
                if (data.ReturnCode == 401) {
                    removeUserSession();
                } else {
                    alert("ReturnMessage: " + data.ReturnMessage);
                    return;
                }
            }

            resultadoJson = data;
            if ($("#grid").data("kendoGrid")) {
                $("#grid").data("kendoGrid").dataSource.data(resultadoJson);
            };
        });
    };

    function obtenerFormatoFecha(d) {
        var curr_date = d.getDate();
        var curr_month = d.getMonth() + 1; //Months are zero based
        var curr_year = d.getFullYear();

        return curr_year + "-" + curr_month + "-" + curr_date;
    };
