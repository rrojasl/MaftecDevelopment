
@{
    ViewBag.Title = "CapturaReporteRT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section breadcrumb {
    <li>
        <a href="@Url.Action("landing", "Home")"><span id="lblInicio"></span></a>
    </li>
    <li>
        <a href="#"><span id="ServiciosTecnicosHeader"></span></a>
    </li>
    <li class="active">
        <a href="@Url.Action("CapturaReporteRT", "PND")"><span id="CapturaReporteHeader"></span></a>
    </li>
}
<div id="FormCapturaReportePruebas" class="form clearfix col-xs-12 col-sm-12 col-md-12 col-lg-12">
    @*Menu superior*@
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="formNav clearfix">
                <div class="button-section editButtonSection">
                    <div class="btn-group save-group">
                        <button id="Guardar" onclick="javascript:void(0);" type="button" class="btn btn-yellow"><span id="botonGuardar"></span></button>
                        <button id="dropdown-toggle" type="button" class="btn btn-yellow dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caretWhite"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#" id="btnGuardar2"><span id="botonGuardar2"></span></a></li>
                            <li><a href="#" id="btnGuardarYNuevo"><span id="botonGuardarYNuevo"></span></a></li>
                        </ul>
                    </div>
                    <a id="btnCancelar" class="btn btn-black"><span id="botonCancelar"></span></a>
                </div>
                <div class="button-section actionButtonSection">
                    <div class="dropdown action-group">
                        <a id="Acciones" data-target="#" href="#" data-toggle="dropdown" role="button" ariahaspopup="true" aria-expanded="false" class="btn btn-default">
                            <span id="botonAcciones1"></span>
                            <span class="caretBlue"></span>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="Acciones"></ul>
                    </div>
                </div>
                <a id="Imprimir" href="#" class="btn btn-fadeBlue actionButtonSection"></a>
            </div>
        </div>
    </div>
    @*Controles Superior*@
    <div class="row">
        <input type="hidden" value=@ViewBag.RequisicionID id="RequisicionID" />
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
            <span id="CapturaReportePruebasTipoPrueba"></span><label id="TipoPrueba"></label>
        </div>
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
            <span id="CapturaReportePruebasRequisicion"> </span><label id="Requisicion"></label>
        </div>
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
            <span id="CapturaReportePruebasFuente"> </span><label id="HerramientaPrueba"></label>
        </div>
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
            <span id="CapturaReportePruebasTurno"> </span><label id="TurnoLaboral"></label>
        </div>
    </div>
    @*GRID*@
    <div class="row addedSectionInLine">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div id="ContenedorGrid" class="row">
                    <div id="grid" data-role="grid" class="k-grid k-widget">
                    </div>
                </div>
            </div>
        </div>
        <input id="hdAccionFiltrado" type="hidden" />
    </div>
    @*Menu Inferior*@
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="formNav clearfix">
                <div class="button-section editButtonSection">
                    <div class="btn-group save-group">
                        <button id="GuardarPie" onclick="javascript:void(0);" type="button" class="btn btn-yellow"><span id="botonGuardar3"></span></button>
                        <button id="dropdown-toggle" type="button" class="btn btn-yellow dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caretWhite"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#" id="btnGuardar1"><span id="botonGuardar4"></span></a></li>
                            <li><a href="#" id="btnGuardarYNuevo1"><span id="botonGuardarYNuevo1"></span></a></li>
                        </ul>
                    </div>
                    <a id="btnCancelar" class="btn btn-black"><span id="botonCancelar2"></span></a>
                </div>
                <div class="button-section actionButtonSection">
                    <div class="dropdown action-group">
                        <a id="Acciones" data-target="#" href="#" data-toggle="dropdown" role="button" ariahaspopup="true" aria-expanded="false" class="btn btn-default">
                            <span id="botonAcciones2"></span>
                            <span class="caretBlue"></span>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="Acciones"></ul>
                    </div>
                </div>
                <a id="Imprimir" href="#" class="btn btn-fadeBlue actionButtonSection"></a>
            </div>
        </div>
    </div>
</div>
<div id="windowGrid" style="display: none; z-index:inherit;">
    <div class="form-group">
        <div class="col-sm-3 col-md-3 col-lg-3">
            <a class="btn btn-blue" href="#" id="GuardarDefectos"><span id="BotonCerrar1"></span></a>
        </div>
    </div>
    <input type="hidden" id="hdnPruebaElementoResultadoID" />
    <input type="hidden" id="hdnRequisicionID" />
    <br />
    <div class="form-group">
        <div id="ContenedorGridPopUp">
            <div id="gridPopUp" data-role="grid" class="k-grid k-widget">
            </div>
        </div>
    </div>

</div>
<script type="text/javascript" src="~/Scripts/AppComponents/PND/CapturaReportePruebas/Ajax.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/PND/CapturaReportePruebas/Handlers.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/PND/CapturaReportePruebas/Render.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/PND/CapturaReportePruebas/Captura.js"> </script>
<script type="text/javascript" src="~/Scripts/AppComponents/PND/CapturaReportePruebas/Seguridad.js"></script>

