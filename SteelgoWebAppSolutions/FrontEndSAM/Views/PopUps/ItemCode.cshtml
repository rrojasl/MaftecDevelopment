        ProyectoItemCode = {};
        TipoPackingListItemCode = {};
        ColadaItemCode = {};
        D1_ItemCode = {};
        D2_ItemCode = {};
    };

    function GuardarItemCode() {
        ItemCode = { ProyectoID: "", TipoPackingList: "", ColadaID: "", ItemCode: "", Descripcion: "", FamiliaID: "", Diametro1: "", Diametro2: "",Diametro1ID:"",Diametro2ID:"" };
        ItemCode.ProyectoID = window.parent.Proyecto.ProyectoID;
        ItemCode.TipoPackingList = window.parent.TipoPackingList.TipoPackingListID;
        ItemCode.ColadaID = 1;
        ItemCode.ItemCode = $("#ItemCode_ItemCode").val();
        ItemCode.Descripcion = $("#Descripcion_ItemCode").val();
        ItemCode.FamiliaID = !familiaItemCode.FamiliaID ? "-1" : familiaItemCode.FamiliaID;
        ItemCode.TipoUsoID = window.parent.TipoUso.TipoUsoID;
        ItemCode.Diametro1ID = D1_ItemCode.Diametro1ID;
        ItemCode.Diametro2ID = D2_ItemCode.Diametro2ID;
        ItemCode.Diametro1 = D1_ItemCode.Valor;
        ItemCode.Diametro2 = D2_ItemCode.Valor;

        //console.log(JSON.stringify(ItemCode))
        $ItemCode.ItemCode.create({}, { data: JSON.stringify(ItemCode), token: Cookies.get("token") }).done(function (data) {
            LimpiarModalItemCode();
            if (Error(data)) {
                cerrarVentanaModal();
            };
        });

    };

    function cancelarvalidacionRequeridosModalItemCode() {
        $("#modalItemCode .security_required").each(function (i, elem) {
            if (elem.tagName.toLowerCase() != 'label') {
                $(this).closest("div").find("label").removeClass("error");
                $(this).closest("div").removeClass("clearfix");
            };
        });
    };

    function CancelarModalItemCode() {
        LimpiarModalItemCode();
        cerrarVentanaModal();
        cancelarvalidacionRequeridosModalItemCode();
    };

    function ControlErroresObjetosComboBox(control, result) {
        if (Error(result)) {
            $("#" + control).data("kendoComboBox").dataSource.data(result);
        } else {
            $("#" + control).data("kendoComboBox").dataSource.data([]);
        };
    };

    function Error(data) {
        if (data.ReturnCode) {
            if (data.ReturnCode != 200) {
                if (data.ReturnCode == 401) {
                    removeUserSession();
                    return true;
                } else {
                    displayMessage("notificationslabel0008", data.ReturnMessage, '2');
                    return false;
                }
            } else {
                return true;
            }
        } else {
            return true;
        }
    };
