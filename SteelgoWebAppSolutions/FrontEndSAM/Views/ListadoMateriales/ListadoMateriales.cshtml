        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="row">
                <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div id="grid"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    @section JavascriptDocumentReadyHomeCookie {
        Cookies.set("home", true, { path: '/' });
        Cookies.set("navegacion", "21", { path: '/' });
    }

    @section JavascriptGlobalVariables {
    var Patio = {}, Proyecto = {}, FolioCuantificacion = {}, FolioPackingList = {};

    var _detalleNumeroUnico = "@Url.Action("DetalleNumeroUnico", "ListadoMateriales")";

    var $ListadoMaterialesModel = {
        listContainer: {
            create: "",
            list: "#grid",
            detail: ".detailLink",
            destroy: ".k-grid-Cancelar"
        },
        properties: {
            patio: {
                visible: "#PatioDiv",
                editable: "#PatioID",
                required: "#PatioID"
            },
            proyecto: {
                visible: "#ProyectoDiv",
                editable: "#ProyectoID",
                required: "#ProyectoID"
            },
            foliocuantificacion: {
                visible: "#FolioCuantificacionDiv",
                editable: "#FolioCuantificacion",
                required: "#FolioCuantificacion"
            },
            foliopackinglist: {
                visible: "#FolioPackingListDiv",
                editable: "#FolioPackingList",
                required: "#FolioPackingList"
            },
            mostrar: {
                visible: "#MostrarDiv",
                editable: "#Mostrar",
                required: "#Mostrar"
            }
            

        }
    };
    }

    @section JavascriptGlobalFunctions {

    //Es la carga inicial del grid para el multilenguaje
    //Funcion: changeLanguageCall
    //Parametros: N/A
    //Return:     N/A
    function changeLanguageCall() {
        CargarGridNumeroUnico();
    }

    //Es la carga inicial de los controles
    //Funcion: cargaInicial
    //Parametros: N/A
    //Return:     N/A
    function cargaInicial() {

        $("#Mostrar").click(function () { Filtros(); });

        $("#PatioID").kendoComboBox({
            dataTextField: "Nombre",
            dataValueField: "PatioID",
            select: function (e) {
                var dataItem = this.dataItem(e.item.index());
                CargarPatio(dataItem.PatioID, dataItem.Nombre);
            },
            change: function (e) {
                var value = this.value();
                if (!value) {
                    Patio = {};
                    Proyecto = {};
                    FolioCuantificacion = {};
                    FolioPackingList = {};
                    $("#ProyectoID").data("kendoComboBox").value("");
                    $("#FolioCuantificacion").data("kendoComboBox").value("");
                    $("#FolioPackingList").data("kendoComboBox").value("");
                } else {
                    ObtenerLosProyectos();
                }
            },
            filter: "contains",
        });
        ObtenerPatio();

        $("#ProyectoID").kendoComboBox({
            dataTextField: "Nombre",
            dataValueField: "ProyectoID",
            select: function (e) {
                var dataItem = this.dataItem(e.item.index());
                CargarProyecto(dataItem.ProyectoID, dataItem.Nombre);
            },
            change: function (e) {
                var value = this.value();
                if (!value) {
                    Proyecto = {};
                    FolioCuantificacion = {};
                    FolioPackingList = {};
                    $("#FolioCuantificacion").data("kendoComboBox").value("");
                    $("#FolioPackingList").data("kendoComboBox").value("");
                } else {
                    ObtenerLosFolioCuantificacion();
                };
            },
            filter: "contains",
        });

        $("#FolioCuantificacion").kendoComboBox({
            dataTextField: "value",
            dataValueField: "id",
            select: function (e) {
                var dataItem = this.dataItem(e.item.index());
                CargarFolioCuantificacion(dataItem.id, dataItem.value);
            },
            change: function (e) {
                var value = this.value();
                if (!value) {
                    FolioCuantificacion = {};
                    FolioPackingList = {};
                    $("#FolioPackingList").data("kendoComboBox").value("");
                } else {
                    ObtenerLosFolioPackingList();
                };
            },
            filter: "contains",
        });

        $("#FolioPackingList").kendoComboBox({
            dataTextField: "value",
            dataValueField: "id",
            select: function (e) {
                var dataItem = this.dataItem(e.item.index());
                CargarFolioPackingList(dataItem.id, dataItem.value);
            },
            change: function (e) {
                var value = this.value();
                if (!value) {
                    FolioPackingList = {};
                } else {

                };
            },
            filter: "contains",
        });
    };


    function ObtenerLosProyectos() {
        var Listado = ArregloListado();
        Listado.TipoListado = 23;

        $folioEntradaMaterial.Listado.read({}, { data: JSON.stringify(Listado) }).done(function (result) {
            ControlErroresObjetosComboBox("ProyectoID", result);
        });
    };

    function ObtenerLosFolioCuantificacion() {
        var Listado = ArregloListado();
        Listado.TipoListado = 9;

        $folioEntradaMaterial.Listado.read({}, { data: JSON.stringify(Listado) }).done(function (result) {
            ControlErroresObjetosComboBox("FolioCuantificacion", result);
        });
    };

    function ObtenerLosFolioPackingList() {
        var Listado = ArregloListado();
        Listado.TipoListado = 24;

        $folioEntradaMaterial.Listado.read({}, { data: JSON.stringify(Listado) }).done(function (result) {
            ControlErroresObjetosComboBox("FolioPackingList", result);
        });
    };

    //Es la carga del grid donde especifican las propiedades y columnas
    //Funcion: CargarGridNumeroUnico
    //Parametros: N/A
    //Return:     N/A
    function CargarGridNumeroUnico() {
        $("#grid").kendoGrid({
            dataSource: {
                //data: resultadoJson,
                schema: {
                    model: {
                        fields: {
                            NumeroUnico: { type: "string" },
                            ItemCode: { type: "string" },
                            Descripcion: { type: "string" },
                            Cedula: { type: "string" },
                            TipoAcero: { type: "string" },
                            D1: { type: "string" },
                            D2: { type: "string" },
                            RangoInf: { type: "string" },
                            RangoSup: { type: "string" },
                            Cantidad: { type: "string" },
                            Colada: { type: "string" },
                            EstatusF: { type: "string" },
                            EstatusD: { type: "string" },
                            AlmacenVirtual: { type: "string" }
                        }
                    }
                },
                pageSize: 10,
                serverPaging: false,
                serverFiltering: false,
                serverSorting: false
            },
            autoHeight: true,
            sortable: true,
            scrollable: false,
            filterable: {
                extra: false,
                operators: {
                    string: {
                        startswith: "Starts with",
                        eq: "Is equal to",
                        neq: "Is not equal to"
                    }
                }
            },
            pageable: {
                refresh: false,
                pageSizes: [10, 15, 20],
                info: false,
                input: false,
                numeric: true,
            },
            columns: [
                { field: "NumeroUnico", title: _dictionary.ListaMateriales0007[$("#language").data("kendoDropDownList").value()], template: "<a class='detailLink' onclick='mostrarDetalle(#:NumeroUnico#)'>#:NumeroUnico#</a>", filterable: true },
                { field: "ItemCode", title: _dictionary.ListaMateriales0008[$("#language").data("kendoDropDownList").value()], filterable: true },
                { field: "Descripcion", title: _dictionary.ListaMateriales0009[$("#language").data("kendoDropDownList").value()], filterable: true },
                { field: "Cedula", title: _dictionary.ListaMateriales0010[$("#language").data("kendoDropDownList").value()], filterable: true },
                { field: "TipoAcero", title: _dictionary.ListaMateriales0011[$("#language").data("kendoDropDownList").value()], filterable: true },
                { field: "D1", title: _dictionary.ListaMateriales0012[$("#language").data("kendoDropDownList").value()], filterable: true },
                { field: "D2", title: _dictionary.ListaMateriales0013[$("#language").data("kendoDropDownList").value()], filterable: true },
                { field: "RangoInf", title: _dictionary.ListaMateriales0014[$("#language").data("kendoDropDownList").value()], filterable: true },
                { field: "RangoSup", title: _dictionary.ListaMateriales0015[$("#language").data("kendoDropDownList").value()], filterable: true },
                { field: "Cantidad", title: _dictionary.ListaMateriales0016[$("#language").data("kendoDropDownList").value()], filterable: true },
                { field: "Colada", title: _dictionary.ListaMateriales0017[$("#language").data("kendoDropDownList").value()], filterable: true },
                { field: "EstatusF", title: _dictionary.ListaMateriales0018[$("#language").data("kendoDropDownList").value()], filterable: true },
                { field: "EstatusD", title: _dictionary.ListaMateriales0019[$("#language").data("kendoDropDownList").value()], filterable: true },
                { field: "AlmacenVirtual", title: _dictionary.ListaMateriales0020[$("#language").data("kendoDropDownList").value()], filterable: true },
            ],
            dataBound: function (e) {
                $(".k-grid input.k-textbox").prop('readonly', true);
                $(".k-grid td .k-button").text('');
                $(".k-grid td:first-child, .k-grid td:last-child").css('text-overflow', 'clip');
            }
        });
    }
    //Redirecciona a la pagina de detalle de un numero unico
    //Funcion: CargarGridNumeroUnico
    //Parametros: numerounico
    //Return:     N/A
         function mostrarDetalle(numerounico) {
             window.location.href = _detalleNumeroUnico + "?leng=" + $("#language").data("kendoDropDownList").value() + "&NumeroUnico=" + numerounico;
        }

    //Se carga el Patio
    //Funcion: CargarPatio
    //Parametros: id,value
    //Return:     N/A
    function CargarPatio(id, value) {
        Patio = {};
        Patio = { PatioID: id, Nombre: value };
    };

    function CargarProyecto(id, value) {
        Proyecto = {};
        Proyecto = { ProyectoID: id, Nombre: value };
    };

    function CargarFolioCuantificacion(id, value) {
        FolioCuantificacion = {};
        FolioCuantificacion = { FolioCuantificacionID: id, Nombre: value };
    };
    
    function CargarFolioPackingList(id, value) {
        FolioPackingList = {};
        FolioPackingList = { FolioPackingListID: id, Nombre: value };
    };
    
        //Se realiza una peticion para obtenr los patios y cargar el combo con los valores
        //Funcion: ObtenerPatio
        //Parametros: N/A
        //Return:     N/A
        function ObtenerPatio() {
            var Listado = { token: "", TipoListado: "" };
            Listado.token = Cookies.get("token");
            Listado.TipoListado = 22;
            $folioEntradaMaterial.Listado.read({ data: JSON.stringify(Listado) }).done(function (result) {
                ControlErroresObjetosComboBox("PatioID", result);
            });
        };

    //Se realiza una peticion para obtenr los patios y cargar el combo con los valores
    //Funcion: ObtenerPatio
    //Parametros: N/A
    //Return:     N/A
        function ObtenerFolioEntradaMaterial() {
            $folioEntradaMaterial.Listado.read({ tipoListado: 1, token: Cookies.get("token") }).done(function (result) {
                ControlErroresObjetosComboBox("FolioAvisoLlegadaID", result);
            });
        };
    //Se realiza una peticion para obtenr los clientes y cargar el combo con los valores
    //Funcion: ObtenerCliente
    //Parametros: N/A
    //Return:     N/A
        function ObtenerCliente() {
            $Cliente.Cliente.read({ token: Cookies.get("token") }).done(function (result) {
                ControlErroresObjetosComboBox("ClienteID", result);
            });
        };
        //Se forma un objeto con todos los filtros e indicando cual tab fue seleccionado
        // creados, sin permiso, sin autorizacion,completos
        //Funcion: ObtenerCliente
        //Parametros: accion
        //Return:    Listado
        function ArregloListado(accion) {
            var Listado = { PatioID: "", ProyectoID: "", FolioCuantificacionID: "", FolioPackingListID: "", TipoListado: "" };

            Listado.PatioID = Patio.PatioID ? Patio.PatioID : -1;
            Listado.ProyectoID = Proyecto.ProyectoID ? Proyecto.ProyectoID : -1;
            Listado.FolioCuantificacionID = FolioCuantificacion.FolioCuantificacionID ? FolioCuantificacion.FolioCuantificacionID : -1;
            Listado.FolioPackingListID = FolioPackingList.FolioPackingListID ? FolioPackingList.FolioPackingListID : -1;
            Listado.token = Cookies.get("token");
            
            return Listado;
        };

        //Se realiza una peticion para obtener los datos y llenar el grid dependiendo de la accion que se realizo
        // creados, sin permiso, sin autorizacion,completos
        //Funcion: AccionesListado
        //Parametros: accion
        //Return:    N/A
        function AccionesListado() {
            loadingStart();
            var Listado = ArregloListado(accion);
            Listado.FolioCuantificacionID
            $ListadoMateriales.ListadoMateriales.read({}, { FolioCuantificacion: Listado.FolioCuantificacionID, token: Cookies.get("token") }).done(function (data) {
                if (Error(data)) {
                    if (!data.length) {
                        displayMessage("notificationslabel0055", data.ReturnMessage, '1');
                        loadingStop();
                        return;
                    };

                    if ($("#grid").data("kendoGrid")) {
                        if (data.length > 0) {
                            $("#grid").data("kendoGrid").dataSource.data(data);
                            $("#grid").data("kendoGrid").dataSource.page(1);
                        } else {
                            $("#grid").data("kendoGrid").dataSource.data([]);
                            $("#grid").data("kendoGrid").dataSource.page(0);
                        };
                       applySecurityPolicy(false);
                    };
                };
                loadingStop();
            });
        };

        //Se envia la accion a la funcion de acconeslistado donde se forma el objeto con todos los filtros
        //Funcion: Filtros
        //Parametros: N/A
        //Return:    N/A
        function Filtros() {
            if(validarRequeridosFormaListadoMateriales()){
                AccionesListado();
            } else {
                displayMessage("notificationslabel0031", "", '1');
            }
        };

        function validarRequeridosFormaListadoMateriales() {
            var bool = true;
            $("#formaListadoMateriales .security_required").each(function (i, elem) {
                if (elem.tagName.toLowerCase() != 'label') {
                    if (!$(this).val()) {
                        bool = false;
                        $(this).closest("div").find("label").addClass("error");
                    } else {
                        $(this).closest("div").find("label").removeClass("error");
                    };
                };
            });
            return bool;
        };

        function Error(data) {
            if (data.ReturnCode) {
                if (data.ReturnCode != 200) {
                    if (data.ReturnCode == 401) {
                        removeUserSession();
                        return true;
                    } else {
                        displayMessage("notificationslabel0008", data.ReturnMessage, '2');
                        return false;
                    }
                } else {
                    return true;
                }
            } else {
                return true;
            }
        };


        function ControlErroresObjetosComboBox(control, result) {
            if (Error(result)) {
                $("#" + control).data("kendoComboBox").dataSource.data(result);
            } else {
                $("#" + control).data("kendoComboBox").dataSource.data([]);
            };
        };
    }

    @section JavascriptDocumentReadyFunctions {
        $authorizationModel["Listado Materiales"] = $ListadoMaterialesModel;
        cargaInicial();
        //applySecurity();
    }

</script>

