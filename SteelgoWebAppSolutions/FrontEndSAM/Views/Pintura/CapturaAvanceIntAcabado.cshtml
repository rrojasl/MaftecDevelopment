    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section breadcrumb {
    <li>
        <a href="@Url.Action("landing", "Home")"><span id="lblCapturaAvanceIntAcabadoInicio"></span></a>
    </li>
    <li>
        <a href="@Url.Action("landing", "Home")"><span id="lblPintura"></span></a>
    </li>
    <li class="active">
        <a href="@Url.Action("CapturaAvanceIntAcabado", "Pintura")"><span id="lblCapturaAvanceIntAcabado"></span></a>
