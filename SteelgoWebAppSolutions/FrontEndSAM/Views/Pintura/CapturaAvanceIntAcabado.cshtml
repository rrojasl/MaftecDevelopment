<script type="text/javascript" src="~/Scripts/AppComponents/Pintura/CapturaAvanceIntAcabado/Ajax.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/Pintura/CapturaAvanceIntAcabado/Handlers.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/Pintura/CapturaAvanceIntAcabado/Captura.js"></script>
