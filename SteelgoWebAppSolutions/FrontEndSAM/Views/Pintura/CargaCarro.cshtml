@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section breadcrumb {
    <li>
        <a href="@Url.Action("landing", "Home")"><span id="lblInicio"></span></a>
    </li>
    <li>
        <a href="#"><span id="lblPintura"></span></a>
    </li>
    <li class="active">
        <a href="@Url.Action("CargaCarro", "Pintura")"><span id="PinturaHeaderCargaCarro"></span></a>
    </li>
}
<div id="FormCargaCarro" class="form clearfix col-xs-12 col-sm-12 col-md-12 col-lg-12">
    @*Menu superior*@
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="formNav clearfix">
                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-12">
                        <div class="button-section editButtonSection">
                            <div class="btn-group save-group">
                                <button id="Guardar" onclick="javascript:void(0);" type="button" class="btn btn-yellow"><span id="botonGuardar"></span></button>
                                <button id="dropdown-toggle" type="button" class="btn btn-yellow dropdown-toggle botonDeplegaMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="caretWhite"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#" id="btnGuardar"><span id="botonGuardar2"></span></a></li>
                                    <li><a href="#" id="btnGuardarYNuevo"><span id="botonGuardarYNuevo"></span></a></li>
                                </ul>

                            </div>

                            <a id="btnCancelar" class="btn btn-black"><span id="botonCancelar"></span></a>
                        </div>
                        <div id="CargaCarroDivSuperior" class="button-section">
                            <a id="CargaCarroSuperior" href="@Url.Action("CapturaAvance","Pintura")" class="btn btn-primary"><span id="PinturaBotonCapturaAvanceTop"></span></a>
                        </div>
                        <div class="button-section actionButtonSection">
                            <div class="dropdown action-group">
                                <a id="Acciones" data-target="#" href="#" data-toggle="dropdown" role="button" ariahaspopup="true" aria-expanded="false" class="btn btn-default">
                                    <span id="botonAcciones1"></span>
                                    <span class="caretBlue"></span>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="Acciones">
                                    <li><a href="#" id="btnCerrarCarro"></a><span id="PinturaBotonCerrarCarro1"></span></li>
                                </ul>
                            </div>
                        </div>
                        <a id="Imprimir" href="#" class="btn btn-fadeBlue actionButtonSection"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*Controles Superior*@
    <div class="row"  id="FieldSetView">
        <div class="col-sm-2 col-md-2 col-lg-2" id="InputCarroDiv">
            <label id="PinturaCargaCarro"></label>
            <input id="inputCarro" />
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3">
            <label id="PinturaCargaArea"></label>
            <label id="labelM2" />
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3">
            <label id="PinturaCargaToneladas"></label>
            <label id="labelToneladas" />
        </div>
    </div>
    @*GRID*@
    <div class="row addedSectionInLine"> 
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="col-sm-2 col-md-2 col-lg-3">
                <div class="btn-group " role="group">
                    <label id="EmbarqueCargaSelecciona"></label>
                    <label id="styleReporte">
                        <input type="radio" name="PinturaCargaTipoSeleccion" style="width:auto;" value="Spool" /><span id="EmbarqueCargaOpcionSpool"></span>
                    </label>

                    <label id="styleListado">
                        <input type="radio" name="PinturaCargaTipoSeleccion" style="width:auto;" value="Codigo" /><span id="EmbarqueCargaOpcionCodigo"> </span>
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2 col-md-2 col-lg-2" id="InputIDDiv">
                    <label id="PinturaCargaSpoolID"></label>
                    <input style="width:40%" id="InputOrdenTrabajo" class="item-select" />-<input id="InputID" placeholder="ID" style="width:40%;" />
                </div>
                <div class="col-sm-3 col-md-3 col-lg-2" id="divCodigo">
                    <label id="PinturaCargaCodigo"></label>
                    <input id="inputCodigo" />
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2" id="">
                    <label id="">&nbsp;</label>
                    <button type="button" id="btnAgregar" class="btn btn-blue"><span id="PinturaCargaAgregar"></span></button>
                </div>
            </div>
   
            <div id="ContenedorGrid" class="col-xs-12 col-sm-12 col-md-12 col-lg-12"> 
                <div id="grid" data-role="grid" class="k-grid k-widget"></div>
            </div> 
        </div>
        <input id="hdAccionFiltrado" type="hidden" />
    </div>

    
    <div id="window"></div>
     
    @*Menu Inferior*@
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="formNav clearfix"> 
                <div class="button-section editButtonSection">
                    <div class="btn-group save-group">
                        <button id="GuardarPie" onclick="javascript:void(0);" type="button" class="btn btn-yellow accionGuardar"><span id="botonGuardar3"></span></button>
                        <button id="dropdown-toggle" type="button" class="btn btn-yellow dropdown-toggle botonDeplegaMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caretWhite"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#" id="Guardar1"><span id="botonGuardar4"></span></a></li>
                            <li><a href="#" id="btnGuardarYNuevo1"><span id="botonGuardarYNuevo1"></span></a></li>
                        </ul>
                    </div>

                    <a id="btnCancelar2" class="btn btn-black"><span id="botonCancelar2"></span></a>
                </div>
                <div id="CargaCarroDivInferior" class="button-section">
                    <a id="CargaCarroInferior" href="@Url.Action("CapturaAvance","Pintura")" class="btn btn-primary"><span id="PinturaBotonCapturaAvancePie"></span></a>
                </div>
                <div class="button-section actionButtonSection">
                    <div class="dropdown action-group">
                        <a id="Acciones" data-target="#" href="#" data-toggle="dropdown" role="button" ariahaspopup="true" aria-expanded="false" class="btn btn-default">
                            <span id="botonAcciones2"></span>
                            <span class="caretBlue"></span>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="Acciones">
                            <li><a href="#" id="btnCerrarCarro1"><span id="PinturaBotonCerrarCarro2"></span></li>
                        </ul>
                    </div>
                </div>
                <a id="Imprimir" href="#" class="btn btn-fadeBlue actionButtonSection"></a>

            </div>
        </div>
    </div>
</div>
 
<form id="divNuevoMedioTransporte" style="display:none">
    <div class="row">
        <div class="container" style="padding:15px;">
            <div class="form-group col-xs-9 col-sm-9 col-md-9 col-lg-9">
                <label id="labelNuevoMedioTransporte"></label>
                <input id="inputMedioTransporte" class="form-control" type="text" />
            </div>

            <div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <label id="labelClasificion"></label>
                <input id="inputClasificacion" class="form-control" />
            </div>

            <div class="form-group col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <label id="labelPersisitencia"></label>
                <input id="inputPersistencia" class="form-control" />
            </div>

            <div class="form-inline col-xs-3 col-sm-3 col-md-3 col-lg-3" id="divNumeroVeces">
                <label id="labelNumeroVeces" style="width:160px;"></label>
                <input id="inputNumeroVeces" class="form-control" style="width:100px;" />
            </div>

            <div class="form-inline col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <label id="labelPesoMaximo"></label>
                <input id="inputPesoMaximo" class="form-control" type="text" style="width:100px;" />
            </div>

            <div class="form-inline col-xs-3 col-sm-3 col-md-3 col-lg-3">
                <label id="labelArea"></label>
                <input id="inputArea" class="form-control" type="text" style="width:100px;" />
            </div>

        </div>
        <div class="buttonSave col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center" style="padding:15px;">
            <button class="btn btn-primary" type="button" id="btnGuardarCrearMedioTransporte"><span id="lblGuardar"></span></button>
            <button class="btn btn-primary" type="button" id="btnCerrarVentanaCrearMedioTransporte"><span id="BotonCerrar1"></span></button>
        </div>
    </div>
</form>

<script type="text/javascript" src="~/Scripts/AppComponents/Pintura/CargaCarro/Render.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/Pintura/CargaCarro/Ajax.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/Pintura/CargaCarro/Handlers.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/Pintura/CargaCarro/Captura.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/Pintura/CargaCarro/Seguridad.js"></script>

